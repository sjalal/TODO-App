<h1> To Do List </h1>
<%= render 'form' %>

<ul>
	<%- @tasks.each do |task| %>
		<li id = "task_<%= task.id %>" style = "list-style-type: none;"><input type = "checkbox" >
		 <%= task.description %>
           | <%= link_to 'Edit', edit_task_path(task) %>
           | <%= link_to 'Delete', task, :method => 'delete' %>
		</li>
	<% end %>
</ul>


